<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <a href="/eventos/novo" class="btn btn-primary">Add Evento</a>
    <br>
    <div class="card">
        <div class="card-head">Eventos</div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <th>Descrição</th>
                    <th>Dia</th>
                    <th>Tipo</th>
                    <th>Q. Pessoas</th>
                    <th>Pessoas Confirmadas</th>
                    <th>Valor da Entrada</th>
                    <th>Responsavel</th>
                    <th>Ações</th>
                </thead>
                <tbody>
                    <% eventos.forEach(evento => { %>
                        <tr>
                            <td><%= evento.descricao %></td>
                            <td id="dia"><%= evento.dataEvento %></td>
                            <td><%= evento.tipo %></td>
                            <td><%= evento.quantPessoas %></td>
                            <td><%= evento.quantPessoasConfirm %></td>
                            <td id="dinheiro"> <%= evento.valorEntrada %></td>
                            <td><%= evento.responsavel %></td>
                            <td>
                                <a href="/eventos/editar/<%= evento.id %>" class="btn btn-primary">Editar</a> 
                                <a href="/eventos/excluir/<%= evento.id %>" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>